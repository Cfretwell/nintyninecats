
<% action_url = (action == :new) ? cats_url : cat_url(cat) %>

<form action="<%=action_url%>" method="post">
    <% if action == :edit %>
        <input type="hidden" name="_method" value="patch">
    <% end %>

    <div>
        <label for="cat_name">Name</label>
        <input type="text" name="cat[name]" id="cat_name" value="<%=cat.name %>" >
        
    </div>
    <br>
    <div>
        <label >Sex</label>
        
        <input type="radio"  name="cat[sex]" id="cat_sex_m" value="M"  <%= cat.sex == "M" ? "checked" : ""  %>>
        <label for="cat_sex_m">Male</label>
        <input type="radio" name="cat[sex]" id="cat_sex_f" value="F" <%= cat.sex == "F" ? "checked" : ""  %>>
        <label for="cat_sex_f">Female</label>
    </div>
    <br>
    <div>
        <label for="cat_color">Color</label>
        <select name="cat[color]" id="cat_color">
            <option disabled>--Please select--</option>
            <% @colors.each do |color| %>
                <option value="<%= color%>" <%= cat.color == color ? "selected" : "" %>  > <%= color.capitalize %> </option>

            <% end %>
        </select>
    </div>
    <br>
    <div>
        <label for="cat_birth_date">Birth Date</label>
        <input type="date" id="cat_birth_date" name="cat[birth_date]" value="<%= cat.birth_date%>"  >
    </div>
    <br>
    <div>
        <label for="cat_description">Description</label>
        <br>
        <textarea name="cat[description]" id="cat_description" cols="30" rows="10"><%=cat.description %></textarea>
    </div>
    <br>

    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <input type="submit" value="Update Cat!">

</form>



