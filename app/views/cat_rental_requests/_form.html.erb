<% action_url = (action == :new) ? cat_rental_requests_url : cat_rental_request_url(cat_rental_request) %>

<form action="<%=action_url%>" method="post">
    <% if action == :edit %>
        <input type="hidden" name="_method" value="patch">
    <% end %>

    <div>
        <label for="cat_id">Which Cat</label>
        <select name="cat_rental_request[cat_id]" id="cat_id">
            <option disabled selected>--Please Select--</option>
            <% @cats.each do |cat| %>
                <option value="<%=cat.id%>"  ><%=cat.name%> </option>

            <%end%>
        
        </select>

    </div>
    <br>
    <div>
        <label for="start_date">Start Date</label>
        <input type="date" id="start_date" name="cat_rental_request[start_date]">
    </div>
    <br>
    <div>
        <label for="end_date">End Date</label>
        <input type="date" id="end_date" name="cat_rental_request[end_date]">
    </div>


    <br>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <input type="submit" value="Create Cat Rental Request!">



</form>